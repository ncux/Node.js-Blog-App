<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <style>

        body {
            background-color: rgb(235, 235, 235)
        }

    </style>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script>
      async function deletePost(e) {
        try {
          const id = e.target.id;
          if(confirm('Are you sure you want to delete this post?')) {
            await axios.delete(`/posts/delete/${id}`);
            location.replace('/home');
          } else {
            return;
          }
        } catch (e) {
            console.error(e.toString());
        }
      }

      async function editPost(e) {
        try {
          const id = e.target.id;
          await axios.put(`/posts/delete/${id}`);
        } catch (e) {
          console.error(e.toString());
        }
      }

    </script>

    <title><%= post.title %></title>
</head>
<body>



    <div>
        <h1><%= post.title %> details</h1>
        <p>
            <%= post.body %>
        </p>

        <button id="<%= post.id %>" onclick=editPost(event) class="btn btn-primary">Edit</button>
        <button id="<%= post.id %>" onclick=deletePost(event) class="btn btn-danger">Delete</button>

    </div>




</body>
</html>
